<!DOCTYPE html>
<html>
  <head>
    <title>Marketing</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <header>
        <div class="page-title">
          Acclamation
        </div>
      </header>
      <% flash.each do |type, message| %>
        <div class="<%= flash_class type %>"><%= message %></div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
